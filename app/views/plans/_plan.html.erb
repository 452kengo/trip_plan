<div class="card bg-light d-inline-block text-wrap h-100 mx-1 plan-card"
  data-model_name="<%= Plan.model_name.singular %>"
  data-id="<%= plan.id %>">
  <div class="d-flex flex-column h-100" style="width: 25rem; min-width: 25rem;">
    <div class="font-weight-bold px-4 py-2 plan-header">
      <div class="pr-5">
        <div class="em"><h5><%= plan.title %></h5></div>
        <br>
        <div class=""><%= plan.plan_date.strftime("%Y-%m-%d") %></div>
      </div>
      <div class="text-right position-absolute" style="top: 4px; right: 4px">
        <button type="button" id="btn-spot-add" class="btn" onclick="location.href='/plans/:plan_id/places';">編集</button>
        <div class="btn-group">
          <button type="button" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-ellipsis-v align-middle"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-left text-middle">
            <%= link_to "プラン名・日程を変える", edit_plan_path(plan), class: "dropdown-item", remote: true %>
            <%= link_to "削除", plan, method: :delete, class: "dropdown-item text-danger", remote: true %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body px-2 pb-2 pt-0 overflow-auto place-cards">
      <%= render partial: "places/place", collection: plan.places, as: :place %>
    </div>
  </div>
</div>
