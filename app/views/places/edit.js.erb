// モーダル追加
$("#modalArea").html(
  "<%= j(render 'modal_form', place: @place, plan: @plan) %>"
);

// フォームにフォーカス
//modalAreaのなかから modalを探してきて、
$("#modalArea").find(".modal").on('shown.bs.modal', () => {
  $("#modalArea").find('form [name="place[content]"]').eq(0).focus();
})

// モーダル表示
$("#modalArea").find(".modal").modal("show");